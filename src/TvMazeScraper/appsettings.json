{
  "Logging": {
    "IncludeScopes": false,
    "Console": {
      "LogLevel": {
        "Default": "Error",
        "TvMazeScraper.Application.Services.TvMazeScraperService": "Information",
        "TvMazeScraper.Domain.Anticorruption.TvMazeRequestBuilder": "Warning"
      }
    }
  },
  "DbSettings": {
    "Mongo": {
      "ConnectionString": "mongodb://mongodb:27017",
      "DatabaseName": "TvMazeScraper"
    }
  },
  "AnticorruptionSettings": {
    "TvMazeApiSetting": {
      "Scheme": "http",
      "Host": "api.tvmaze.com",
      "Port": 80,
      "Timeout": 10,
      "ApiUrl": {
        "ShowsUrl": "shows?page={0}",
        "ShowCastUrl": "shows/{0}/cast"
      }
    }
  }
}
